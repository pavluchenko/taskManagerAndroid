<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taskmanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskManager">

        <activity android:name="com.example.taskmanager.activity.ProfileActivity"/>

        <activity
            android:name="com.example.taskmanager.activity.FriendSearchActivity"
            android:theme="@style/Transparent" />

        <activity
            android:name="com.example.taskmanager.activity.CalendarActivity"
            android:theme="@style/Transparent" />

        <activity android:name="com.example.taskmanager.activity.AddEditTaskActivity" />

        <activity android:name="com.example.taskmanager.activity.MainActivity" />

        <activity
            android:name="com.example.taskmanager.activity.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>